{
  "name": "{{name}}",
  "version": "1.0.0",
  "description": "{{description}}",
  {{#if buildsWithBabel }}
  "main": "dist/js/index.js",
  "module": "dist/esm/index.js",
  {{#if includeTypings}}
  "types": "dist/js/index.d.ts",
  {{/if}}
  {{else}}
  "main": "lib/index.js",
  {{#if includeTypings}}
  "types": "lib/index.d.ts",
  {{/if}}
  {{/if}}
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patternfly/patternfly-react.git"
  },
  "keywords": [
    "react",
    "patternfly"
  ],
  "author": "Red Hat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patternfly/patternfly-react/issues"
  },
  "homepage": "https://github.com/patternfly/patternfly-react#readme",
  "scripts": {
    {{#if buildsWithBabel}}
    "build": "yarn build:babel",
    "build:babel": "concurrently \"yarn build:babel:cjs\" \"yarn build:babel:esm\"",
    "build:babel:cjs": "cross-env BABEL_ENV=production:cjs babel src --out-dir dist/js",
    "build:babel:esm": "cross-env BABEL_ENV=production:esm babel src --out-dir dist/esm"
    {{/if}}
  },
  "dependencies": {},
  "devDependencies": {}
}
