{
  "name": "@patternfly/react-lerna-root",
  "private": true,
  "version": "0.0.0",
  "description": "This library provides a set of common React components for use with the PatternFly reference implementation.",
  "repository": {
    "type": "git",
    "url": "https://github.com/patternfly/patternfly-react.git"
  },
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=5.5.1",
    "yarn": ">=1.6.0"
  },
  "keywords": [
    "react",
    "patternfly"
  ],
  "author": "Red Hat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patternfly/patternfly-react/issues"
  },
  "homepage": "https://github.com/patternfly/patternfly-react#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-typescript": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^v3.4.11",
    "@storybook/addon-info": "^v3.4.11",
    "@storybook/addon-knobs": "^v3.4.11",
    "@storybook/addon-links": "^v3.4.11",
    "@storybook/addon-options": "^v3.4.11",
    "@storybook/addon-storysource": "^v3.4.11",
    "@storybook/addon-viewport": "^3.4.11",
    "@storybook/addons": "^3.3.0",
    "@storybook/react": "^v3.4.11",
    "@storybook/storybook-deployer": "^2.1.0",
    "babel-plugin-typescript-to-proptypes": "^0.17.1",
    "change-case": "^3.0.2",
    "codecov": "^3.2.0",
    "commitizen": "^3.0.7",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.10.0",
    "enzyme-to-json": "3.3.5",
    "eslint": "^5.13.0",
    "eslint-import-resolver-webpack": "^0.9.0",
    "eslint-plugin-patternfly-react": "file:packages/eslint-plugin-patternfly-react",
    "fs-extra": "^6.0.1",
    "glob": "^7.1.2",
    "istanbul-api": "1.3.1",
    "istanbul-reports": "1.3.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lerna": "^3.13.0",
    "minimist": "^1.2.0",
    "mutation-observer": "^1.0.3",
    "plop": "^2.0.0",
    "prettier": "^1.16.1",
    "prettier-eslint": "^8.8.1",
    "react": "~16.8.4",
    "react-dev-utils": "^5.0.0",
    "react-dom": "~16.8.4",
    "react-scripts": "2.1.3",
    "sass-loader": "^6.0.6",
    "shx": "^0.3.2",
    "style-loader": "^0.20.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "surge": "^0.20.1",
    "ts-jest": "23.10.5"
  },
  "optionalDependencies": {
    "sortabular": "^1.5.1",
    "table-resolver": "^3.2.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "node scripts/incrementalBuild.js",
    "build:pf3": "yarn build pf3",
    "build:pf4": "yarn build pf4",
    "build:docs": "lerna run build:docs --stream",
    "build:storybook": "build-storybook -c storybook -o .out",
    "build:integration": "lerna run build:demo-app --stream",
    "clean": "yarn clean:build && lerna run clean --parallel",
    "clean:build": "shx rm -rf .cache",
    "commit": "git-cz",
    "generate": "yarn plop",
    "lint:js": "lerna run lint:js --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "lint:style": "lerna run stylelint",
    "lint:ts": "lerna run lint:ts --parallel",
    "lint:versions": "lerna run lint:versions",
    "prettier": "prettier --write \"storybook/**/*.js\" \"packages/**/*.js\" \"scripts/**/*.js\"",
    "start": "yarn start:pf3",
    "start:cypress": "lerna run cypress:open",
    "start:demo-app": "lerna run start:demo-app --stream",
    "start:pf3": "concurrently \"yarn storybook\" \"yarn storybook:openurl\"",
    "start:pf4": "yarn build:pf4 && lerna run develop --parallel --stream",
    "storybook:openurl": "node ./storybook/openBrowser.js",
    "storybook": "start-storybook -c storybook -p 6006",
    "test": "jest packages",
    "test:current": "jest --watch",
    "test:integration": "lerna run test:integration",
    "test:misc": "jest packages/react-*",
    "test:pf3": "jest packages/patternfly-3",
    "test:pf4": "jest packages/patternfly-4",
    "test:watch": "jest --watchAll",
    "uninstall": "find . -name node_modules -type d | xargs rm -rf"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  }
}
