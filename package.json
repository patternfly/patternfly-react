    "@storybook/react": "3.2.12",
    "@storybook/storybook-deployer": "^2.0.0",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "commitizen": "^2.9.6",
    "css-loader": "^0.28.7",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-prettier": "^2.1.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-jsx": "^4.0.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-prettier": "^2.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.4.1",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^19.0.2",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "patternfly": "^3.27.4",
    "prettier": "^1.3.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "semantic-release": "^6.3.6",
    "style-loader": "^0.19.0"
  },
  "peerDependencies": {
    "patternfly": "^3.27.4",
    "prop-types": "^15.5.10",
    "react": "^15.6.2 || ^16.0.0",
    "react-dom": "^15.6.2 || ^16.0.0"
  },
  "scripts": {
    "commit": "git-cz",
    "build": "babel src --out-dir lib --ignore test.js,__mocks__  && less",
    "less": "mkdir -p lib/styles/less && cp -r less/ lib/styles/less",
    "lint": "eslint --max-warnings 0 src storybook",
    "prettier": "prettier --write --single-quote --no-semi '{src,storybook}/**/*.js'",
    "prepublish": "npm run build",
    "test": "npm run lint && jest",
    "test:watch": "jest --watchAll",
    "storybook": "start-storybook -c storybook -p 6006",
    "build-storybook": "build-storybook -c storybook -o .out",
    "storybook:deploy": "storybook-to-ghpages",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  }
}
