{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/js",
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "paths": {
      "*": [
        "dist/esm/*"
      ]
    }
  },
  "include": [
    "typings",
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/**.test.tsx",
    "./src/**/**.test.ts",
    "./src/**/examples/**"
  ]
}