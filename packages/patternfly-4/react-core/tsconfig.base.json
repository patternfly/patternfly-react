{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "jsx": "react",
    "target": "es5"
  },
  "include": [
    "./src/*",
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/**.test.tsx",
    "./src/**/**.test.ts",
    "./src/**/examples/**"
  ]
}