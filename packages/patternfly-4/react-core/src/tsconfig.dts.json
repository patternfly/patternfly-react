{
  "compilerOptions": {
    "outDir": "../dist/js",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "noEmit": false,
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "paths": {
      "*": [
        "../dist/esm/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./**/*.d.ts",
    "./**/**.test.tsx",
    "./**/**.test.ts",
    "./**/examples/**"
  ]
}