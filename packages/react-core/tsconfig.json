{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "tsBuildInfoFile": "dist/esm.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "*/next": ["./src/next"],
      "*/deprecated": ["./src/deprecated"],
    }
  },
  "include": [
    "./src/*",
    "./src/**/*"
  ],
  "references": [
    {
      "path": "../react-styles"
    }
  ]
}
