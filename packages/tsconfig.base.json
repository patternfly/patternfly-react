{
  "compilerOptions": {
    "assumeChangesOnlyAffectDirectDependencies": true,
    "jsx": "react-jsx",
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "strictNullChecks": false,
    "isolatedModules": true,
    "plugins": [
      { "transform": "transformer-cjs-imports" },
      { "transform": "transformer-react-styles-esm-imports/index.ts", "type": "raw" }
    ],
    "typeRoots": [
      "../types",
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "**/**.test.tsx",
    "**/**.test.ts",
    "**/examples/**",
    "**/__mocks__/**"
  ]
}
