{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/js",
    "rootDirs": [
      "src",
      "src/icons",
      "dist/js/icons"
    ]
  },
  "include": [
    "./src/*",
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/**.test.tsx",
    "./src/**/**.test.ts",
    "./src/**/examples/**"
  ]
}
