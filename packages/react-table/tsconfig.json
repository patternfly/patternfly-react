    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "tsBuildInfoFile": "dist/esm.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "./deprecated": ["./src/deprecated"]
    }
  },
  "include": [
    "./src/*",
    "./src/**/*",
  ],
  "references": [
    {
      "path": "../react-core"
    },
    {
      "path": "../react-icons"
    },
    {
      "path": "../react-styles"
    }
  ]
}
