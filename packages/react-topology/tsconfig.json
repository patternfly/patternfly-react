{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "declarationDir": "./dist/js",
    "tsBuildInfoFile": "dist/esm.tsbuildinfo",
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,    
  },
  "include": [
    "./src/*",
    "./src/**/*"
  ],
  "references": [
    {
      "path": "../react-core"
    }
  ]
}
