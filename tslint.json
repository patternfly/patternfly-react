{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "**/dist/*",
      "**/dist/**",
      "**/coverage/**",
      "**/templates/**",
      "**/react-styles/css/**",
      "**/react-docs/public/**",
      "**/react-docs/public/*",
      "**/demo-app-ts/build/**"
    ]
  },
  "rules": {
    "member-access": [
      true,
      "no-public"
    ],
    "member-ordering": false,
    "array-type": [
      true,
      "array"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "jsx-no-lambda": false,
    "jsx-self-close": true,
    "jsx-wrap-multiline": false,
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "variable-name": false,
    "ordered-imports": false
  },
  "jsRules": true
}